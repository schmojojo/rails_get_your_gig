<div class="container my-5">
  <% if user_signed_in? %>
    <div class="row mb-4">
      <div class="col-12">
        <h1 class="mb-3">Create a New Event</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-8 col-lg-6">
        <%= simple_form_for @event do |f| %>
          <div class="mb-3">
            <%= f.input :title, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :description, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :contact, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :date, as: :date, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :category, as: :select,
                        collection: ["Entertainment", "Education", "Work-Related", "Personal"],
                        include_blank: false,
                        input_html: { class: "form-select" } %>
          </div>

          <div class="mb-3">
            <%= f.input :location, input_html: { class: "form-control" } %>
          </div>

          <%= f.submit "Save Event", class: "btn btn-primary" %>
        <% end %>

        <div class="mt-4">
          <%= link_to "â† Back to Events", events_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

  <% else %>
    <div class="row">
      <div class="col-12">
        <p>Please <%= link_to "log in", new_user_session_path %> to create a new event.</p>
        <div class="mt-4">
          <%= link_to "â† Back to Events", events_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
