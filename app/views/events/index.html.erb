

<div class="container my-5">
  <h1 class="display-5 fw-bold mb-3">Upcoming events</h1>

  <div class="mt-4 mb-4">
    <%= link_to "Create new Event", new_event_path, class: "btn btn-outline-primary me-2" %>
    <% if user_signed_in? %>
    <%= link_to "Search Events", new_user_message_path(current_user), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Search Events",  new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="row g-4">
    <% @events.each do |event| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to event.title, event_path(event), class: "stretched-link text-decoration-none" %>
            </h5>
            <p class="card-text flex-grow-1"><%= truncate(event.description, length: 100) %></p>
            <p class="card-text">
              <small class="text-muted">
                <i class="fa-regular fa-calendar"></i>
                <%= event.date %>
                <br>
                <i class="fa-solid fa-location-dot"></i>
                <%= event.location %>
              </small>
            </p>
            <%= cl_image_tag event.photo.key, height: 300, crop: :fill, class: "mb-3 object-cover" unless event.photo.key == nil %>
            <%= link_to "Details", event_path(event), class: "btn btn-primary w-100 mt-auto" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
