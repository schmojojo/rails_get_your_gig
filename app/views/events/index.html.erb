<div class="container my-5">
  <h1 class="display-5 fw-bold mb-3">Upcoming Events</h1>

  <div class="mt-4 mb-4">
    <%= link_to "Create new Event", new_event_path, class: "btn btn-outline-primary me-2" %>
    <%= link_to "Search Events", new_message_path, class: "btn btn-primary" %>
  </div>

  <div class="row g-4">
    <% @events.each do |event| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to event.title, event_path(event), class: "stretched-link text-decoration-none" %>
            </h5>
            <p class="card-text flex-grow-1"><%= truncate(event.description, length: 100) %></p>
            <p class="card-text">
              <small class="text-muted"><%= event.date %> — <%= event.location %></small>
            </p>
              <%= cl_image_tag event.photo.key, height: 300, crop: :fill unless event.photo.key == nil %>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="fw-semibold mb-1">
              <%= link_to event.title, event_path(event), class: "text-decoration-none stretched-link" %>
            </h5>

            <p class="text-muted small mb-3">
              <%= event.date %> — <%= event.location %>
            </p>

            <p class="flex-grow-1 mb-3">
              <%= truncate(event.description, length: 110) %>
            </p>

            <%= link_to "Details", event_path(event), class: "btn btn-primary w-100 mt-auto" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
