
<div class="container my-5">
<h1 class="display-5 fw-bold mb-3">Upcoming Events</h1>
<div class="mt-4 mb-4">
    <%= link_to "Create new Event", new_event_path, class: "btn btn-outline-primary" %>
    <%= link_to "Search Events", new_message_path(@message), class: "btn btn-primary" %>
</div>


  <div class="row">
    <% @events.each do |event| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to event.title, event_path(event), class: "stretched-link text-decoration-none" %>
            </h5>
            <p class="card-text flex-grow-1"><%= truncate(event.description, length: 100) %></p>
            <p class="card-text">
              <small class="text-muted"><%= event.date %> â€” <%= event.location %></small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
